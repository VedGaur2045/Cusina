<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_15sdp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/imgSet"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shape_roundRect_bottomLeftRadius="12dp"
                app:shape_roundRect_bottomRightRadius="12dp"
                app:shape_roundRect_topLeftRadius="12dp"
                app:shape_roundRect_topRightRadius="12dp">

                <ImageView
                    android:id="@+id/productImg"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fish_img_6" />

            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <ImageView
                android:id="@+id/favouriteImg"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@mipmap/like_img"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/todo"
                android:layout_marginLeft="@dimen/_10sdp" />

            <TextView
                android:id="@+id/favouriteProductCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_40"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                tools:ignore="RelativeOverlap"
                app:fontFamily="@font/sourcesanspro_regular"/>

            <TextView
                android:id="@+id/productTime"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_16sdp"
                android:text="@string/_15_min"
                android:textColor="@color/_333333"
                android:textSize="@dimen/_8ssp"
                android:gravity="center"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/textback"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_10sdp"
                app:fontFamily="@font/sourcesanspro_regular"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_productName"
                    android:textColor="@color/_000000"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="normal"
                    tools:ignore="RelativeOverlap"
                    app:fontFamily="@font/sourcesanspro_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_30sdp">

                    <ImageView
                        android:id="@+id/ratingImg"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@mipmap/rating_img"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp" />

                    <TextView
                        android:id="@+id/productRatingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_productRating"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textStyle="normal"
                        android:textColor="@color/_80000000"
                        tools:ignore="RelativeOverlap"
                        app:fontFamily="@font/sourcesanspro_regular" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/productShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/byJennyPancit"
                android:textSize="@dimen/_10ssp"
                app:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/_80000000"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp" />

            <TextView
                android:id="@+id/productPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeDesert"
                android:textSize="@dimen/_10ssp"
                app:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/_80000000"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_productPrice"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_16ssp"
                app:fontFamily="@font/sourcesanspro_bold"/>

            <TextView
                android:id="@+id/productServingLeft"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_productServingLeft"
                android:textColor="@color/_FF8500"
                android:textStyle="italic"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_1sdp"
                app:fontFamily="@font/sourcesanspro_regular"/>

            <TextView
                android:id="@+id/productMinimumOrder"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_productMinimumOrder"
                android:textColor="@color/_EC0000"
                android:textStyle="normal"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_5sdp"
                app:fontFamily="@font/sourcesanspro_regular"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/productDeliveryDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/_09KM"
                    android:textColor="@color/_80000000"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="@dimen/_7sdp"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/gray_colo_back"
                    app:fontFamily="@font/sourcesanspro_regular"/>

                <TextView
                    android:id="@+id/productDeliveryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/_deleveryFee"
                    android:textColor="@color/_80000000"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="@dimen/_7sdp"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/gray_colo_back"
                    app:fontFamily="@font/sourcesanspro_regular"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>