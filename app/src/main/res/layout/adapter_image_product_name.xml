<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/_110sdp"
    android:layout_height="@dimen/_110sdp"
    android:layout_margin="@dimen/_15sdp"
    android:background="@drawable/postviewbg"
    android:translationY="@dimen/_3sdp"
    android:translationZ="@dimen/_6sdp">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomLeftRadius="12dp"
        app:shape_roundRect_bottomRightRadius="12dp"
        app:shape_roundRect_topLeftRadius="12dp"
        app:shape_roundRect_topRightRadius="12dp">

        <ImageView
            android:id="@+id/productImg"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:src="@mipmap/item_name"
            android:scaleType="fitXY"/>

    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_dishName"
        android:textColor="@color/_FFFFFF"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_15sdp"
        tools:ignore="RelativeOverlap,MissingPrefix"
        android:textStyle="bold"
        android:fontFamily="@font/sourcesanspro_bold" />

</RelativeLayout>