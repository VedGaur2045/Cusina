<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@mipmap/back"
            android:onClick="backBtnClick"
            android:background="@color/_00000000"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_25sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_24ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                fontPath="fonts/cabin_semibold.otf"
                tools:ignore="MissingPrefix"
                android:text="@string/order_placed"/>
            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:layout_margin="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_above="@+id/img"
                android:layout_gravity="center"
                android:textAlignment="center"
                fontPath="@fonts/sourcesanspro_regular" tools:ignore="MissingPrefix"
                android:text="@string/order_placed_msg1"/>

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_158sdp"
                android:layout_height="@dimen/_177sdp"
                android:src="@mipmap/vegitables"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_25sdp"/>
            <Button
                android:id="@+id/backToMenuBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/back_to_food_menu"
                android:background="@drawable/commonbuttonbg"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_below="@+id/img"
                fontPath="@fonts/sourcesanspro_semibold" tools:ignore="MissingPrefix"
                android:textColor="@color/white"/>

        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>