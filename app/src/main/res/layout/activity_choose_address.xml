<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    tools:context=".Activities.Choose_address">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@mipmap/close"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/close"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp">

            <RelativeLayout
                android:id="@+id/searchaddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/borderless"
                android:layout_marginTop="@dimen/_20sdp">
            <ImageView
                android:id="@+id/search"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@mipmap/search"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_address"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/search"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:fontFamily="@font/sourcesanspro_regular"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/currentlocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/borderless"
                android:layout_marginTop="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/gps"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@mipmap/gps_fixed"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_25sdp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_toRightOf="@id/gps">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_location"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/sourcesanspro_regular"/>
                    <TextView
                        android:id="@+id/locationtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Canley Road, Pasig City"
                        android:textColor="@color/black"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/sourcesanspro_regular"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_above="@id/next"
          android:layout_marginBottom="@dimen/_25sdp"
          android:orientation="vertical">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/_9ssp"
              android:fontFamily="@font/sourcesanspro_regular"
              android:textColor="@color/black"
              android:text="@string/msg1"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/_9ssp"
              android:layout_gravity="center"
              android:fontFamily="@font/sourcesanspro_regular"
              android:textColor="@color/black"
              android:text="@string/msg2"/>
      </LinearLayout>
        <Button
            android:id="@+id/next"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:text="@string/next"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:textSize="@dimen/_14ssp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="@drawable/commonbuttonbg"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>