<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@mipmap/back"
            android:background="@color/transparent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_24ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                tools:ignore="MissingPrefix"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/sub_title"
                android:fontFamily="@font/cabin_semibold"
                android:text="@string/dish_listed"/>
            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                tools:ignore="MissingPrefix"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/img"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/dish_listed_msg1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_1sdp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="@string/dish_listed_msg2"/>
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vegitables"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_25sdp"/>
            <Button
                android:id="@+id/backToHomeBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/back_to_home"
                android:background="@drawable/commonbuttonbg"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img"
                android:layout_marginTop="@dimen/_23sdp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/addanotherluto"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/add_another_luto"
                android:background="@drawable/redbuttonbg"
                android:textSize="@dimen/_12ssp"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_below="@+id/backToHomeBtn"
                android:layout_marginTop="@dimen/_10sdp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textColor="@color/white"/>

        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>