<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:background="@drawable/postviewbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:translationZ="@dimen/_6sdp"
        android:translationY="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                app:shape_roundRect_topLeftRadius="12dp"
                app:shape_roundRect_topRightRadius="12dp">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@mipmap/product_img"
                    android:scaleType="centerCrop"/>

            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <ImageView
                android:id="@+id/favImage"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@mipmap/img_fav"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/_10sdp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PancitMalabon"
                android:textSize="@dimen/_11sdp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/_000000"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_43sdp"
                android:layout_marginRight="@dimen/_43sdp"/>

            <TextView
                android:id="@+id/productRatingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/_productRating"
                android:textColor="@color/_80000000"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal"
                android:layout_marginStart="@dimen/_15sdp"
                tools:ignore="RelativeOverlap,MissingPrefix"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/ratingImg"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:src="@mipmap/rating_img"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="bottom"/>

        </LinearLayout>

        <TextView
            android:id="@+id/productShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            tools:ignore="MissingPrefix"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="@string/byJennyPancit"
            android:textColor="@color/_80000000"
            android:textSize="@dimen/_7sdp" />

        <TextView
            android:id="@+id/productPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeDesert"
            android:textSize="@dimen/_7sdp"
            tools:ignore="MissingPrefix"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textColor="@color/_80000000"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/productAvailibility"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/AvailableFridays"
                android:textColor="@color/_80000000"
                android:textStyle="normal"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="@dimen/_1sdp"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/gray_colo_back"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular"
                android:paddingStart="7dp"
                android:paddingEnd="@dimen/_7sdp" />

            <TextView
                android:id="@+id/productDeliveryDistance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/gray_colo_back"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="@string/_09KM"
                android:textColor="@color/_80000000"
                android:textSize="@dimen/_8ssp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/productDeliveryPickUp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/gray_colo_back"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular"
                android:gravity="center"
                android:paddingStart="7dp"
                android:paddingLeft="7dp"
                android:paddingEnd="@dimen/_7sdp"
                android:paddingRight="@dimen/_7sdp"
                android:text="@string/Pick_up_Only"
                android:textColor="@color/_80000000"
                android:textSize="@dimen/_8ssp"
                android:textStyle="normal" />

        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:id="@+id/productMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PHP_250_00"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_bold"
                android:textColor="@color/_000000"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/productPreOrder"
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/_1sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_7sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_productPreOrder"
                android:textColor="@color/_FF8500"
                android:textStyle="normal"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/pre_order_back"
                android:gravity="center"
                android:fontFamily="@font/sourcesanspro_regular"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:ignore="RelativeOverlap,MissingPrefix" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>