<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PaymentMethodActivity">

    <include
        android:id="@+id/headerLayout"
        layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:id="@+id/paymentMethod"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_FFFFFF"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SelectPaymentMode"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:textColor="@color/_000000"
            android:textSize="@dimen/_16ssp"/>

<!--        <RadioGroup-->
<!--            android:id="@+id/radioGroup"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->

            <RelativeLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/COD_Img"
                    android:layout_width="@dimen/_51sdp"
                    android:layout_height="@dimen/_51sdp"
                    android:src="@mipmap/cash_on_delivery_img"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/cash_on_delivery_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CashOnDelivery"
                    android:layout_toEndOf="@+id/COD_Img"
                    android:layout_toRightOf="@+id/COD_Img"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textColor="@color/_000000"/>

                <RadioButton
                    android:id="@+id/COD_Checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="@dimen/_10sdp"
                    tools:ignore="RtlSymmetry" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/G_CASH_Img"
                    android:layout_width="@dimen/_51sdp"
                    android:layout_height="@dimen/_51sdp"
                    android:src="@mipmap/gcash"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/G_Cash_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GCashTxt"
                    android:layout_toEndOf="@+id/G_CASH_Img"
                    android:layout_toRightOf="@+id/G_CASH_Img"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textColor="@color/_000000"/>

                <RadioButton
                    android:id="@+id/G_Cash_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:checked="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/_10sdp"
                    tools:targetApi="lollipop"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="@dimen/_10sdp"
                    tools:ignore="RtlSymmetry" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/CoinsPh_Img"
                    android:layout_width="@dimen/_51sdp"
                    android:layout_height="@dimen/_51sdp"
                    android:src="@mipmap/coinsph"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/Coins_Ph_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GCashTxt"
                    android:layout_toEndOf="@+id/CoinsPh_Img"
                    android:layout_toRightOf="@+id/CoinsPh_Img"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textColor="@color/_000000"/>

                <RadioButton
                    android:id="@+id/Coins_Ph_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:checked="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/_10sdp"
                    tools:targetApi="lollipop"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="@dimen/_10sdp"
                    tools:ignore="RtlSymmetry" />

            </RelativeLayout>

<!--        </RadioGroup>-->

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@drawable/bg_white_drawable"
        android:translationZ="@dimen/_11sdp"
        android:translationY="@dimen/_3sdp"
        android:layout_height="@dimen/_190sdp"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Total_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_subTotalTxt"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/_000000"/>

            <TextView
                android:id="@+id/Total_Amt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_70"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/_000000"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_TotalAmount"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textColor="@color/_000000"/>

            <TextView
                android:id="@+id/subTotal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_70"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textColor="@color/_000000"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <Button
            android:id="@+id/placeOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/btn_bg"
            android:layout_margin="@dimen/_20sdp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="@string/_PayNow"
            android:onClick="BuyNowBtnOnClick"
            android:textAllCaps="false"
            android:textColor="@color/_FFFFFF"
            android:textSize="@dimen/_14ssp"
            app:fontFamily="@font/sourcesanspro_semibold"/>

    </LinearLayout>

</RelativeLayout>