<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/_20sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:id="@+id/orderListLayout">

    <ImageView
        android:id="@+id/greenOval"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:src="@drawable/green_oval_drawable"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_toEndOf="@+id/greenOval"
        android:id="@+id/orderLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/greenOval"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orderTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orderTxt"
                android:textColor="@color/_80000000"
                android:textSize="@dimen/_10ssp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular" />

            <TextView
                android:layout_toEndOf="@+id/orderTxt"
                android:id="@+id/orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_41"
                android:textColor="@color/_80000000"
                android:textSize="@dimen/_10ssp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular"
                android:layout_toRightOf="@+id/orderTxt" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phpTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_pHp"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_16ssp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular" />

            <TextView
                android:id="@+id/phpAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_600"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_16ssp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular"
                android:layout_toEndOf="@+id/phpTxt"
                android:layout_toRightOf="@+id/phpTxt" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/serverTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_CustomerNameTxt"
                android:textColor="@color/_80000000"
                android:textSize="@dimen/_10ssp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular" />

            <TextView
                android:layout_toEndOf="@+id/serverTxt"
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_inboxDate"
                android:textColor="@color/_80000000"
                android:textSize="@dimen/_10ssp"
                tools:ignore="MissingPrefix"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:layout_toRightOf="@+id/serverTxt"
                android:layout_marginLeft="@dimen/_10sdp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/DetailsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Details"
        android:textColor="@color/_80000000"
        android:textSize="@dimen/_10ssp"
        tools:ignore="MissingPrefix"
        android:fontFamily="@font/sourcesanspro_regular"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp" />

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:src="@mipmap/right_arrow_ad"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>