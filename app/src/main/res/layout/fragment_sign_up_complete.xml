<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@mipmap/back"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"/>

    <ScrollView
        android:layout_below="@+id/back"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_22ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"
                android:layout_marginTop="@dimen/_10sdp"
                fonthPath="fonts/cabin_semibold.otf"
                android:text="@string/application_received"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_9sdp"
                tools:ignore="MissingPrefix"
                fonthPath="fonts/sourcesanspro_regular"
                android:text="@string/application_received_msg1"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vegitables"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"/>
            <Button
                android:id="@+id/backToHome"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/back_to_home"
                android:background="@drawable/commonbuttonbg"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                tools:ignore="MissingPrefix"
                fonthPath="fonts/sourcesanspro_semibold.otf"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/addAnotherLuto"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/add_another_application"
                android:background="@drawable/redbuttonbg"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                tools:ignore="MissingPrefix"
                fonthPath="fonts/sourcesanspro_semibold.otf"
                android:textColor="@color/white"/>

        </LinearLayout>
    </RelativeLayout>

    </ScrollView>
</RelativeLayout>