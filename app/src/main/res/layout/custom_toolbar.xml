<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/allIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/toolbarPageIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:visibility="visible"
                android:id="@+id/titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_24ssp"
                android:textColor="@color/black"
                app:fontFamily="@font/cabin_semibold"
                tools:ignore="RtlSymmetry" />

            <ImageButton
                android:visibility="visible"
                android:id="@+id/closeImgBtn"
                android:background="@color/transparent"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@mipmap/close"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:contentDescription="TODO"
                android:layout_marginRight="@dimen/_15sdp" />

            <ImageButton
                android:visibility="visible"
                android:id="@+id/backBtnImg"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@mipmap/back"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp" />
            
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/homePageIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:visibility="visible"
                android:id="@+id/backImgBtn"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@mipmap/back"
                android:background="@color/transparent"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:contentDescription="TODO"
                android:layout_marginRight="@dimen/_15sdp" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/gps_indicatorImgBtn"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@mipmap/gps_indicator"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_35sdp"
                android:contentDescription="TODO"
                android:layout_marginLeft="@dimen/_35sdp" />

            <TextView
                android:visibility="visible"
                android:id="@+id/locationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/locationName"
                android:layout_marginStart="@dimen/_65sdp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_110sdp"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                app:fontFamily="@font/sourcesanspro_regular"
                tools:ignore="RtlSymmetry"
                android:singleLine="true"
                android:layout_marginRight="@dimen/_110sdp"
                android:layout_marginLeft="@dimen/_70sdp" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/filterImgBtn"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@mipmap/filter_img"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_25sdp" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/notificationImgBtn"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@mipmap/notification_img"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/_55sdp"
                android:contentDescription="@string/todo"
                android:layout_marginRight="@dimen/_55sdp"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/favouriteImgBtn"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@mipmap/blank_heart_img"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/_85sdp"
                android:contentDescription="@string/todo"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_85sdp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>