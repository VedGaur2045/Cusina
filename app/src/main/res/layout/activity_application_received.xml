<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.Application_received">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@mipmap/back"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="@dimen/_45sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_24ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="@font/cabin_semibold"
                android:text="@string/application_received"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_9sdp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/application_received_msg1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_1sdp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/black"
                android:text="@string/application_received_msg2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/black"
                android:text="@string/application_received_msg3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_1sdp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/black"
                android:text="@string/application_received_msg4"/>
            <ImageView
                android:layout_width="@dimen/_158sdp"
                android:layout_height="@dimen/_177sdp"
                android:src="@mipmap/vegitables"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"/>
            <Button
                android:id="@+id/backtohome"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:text="@string/back_to_home"
                android:background="@drawable/commonbuttonbg"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_23sdp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/addanotherluto"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:text="@string/add_another_application"
                android:background="@drawable/redbuttonbg"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_23sdp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textColor="@color/white"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>