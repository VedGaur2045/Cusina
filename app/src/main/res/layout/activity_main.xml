<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/nav_host_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        app:defaultNavHost="true"
        app:navGraph="@navigation/navigation_main" />


    <RelativeLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <FrameLayout
                android:id="@+id/action_home_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_action_home"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/action_search_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_action_search"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Search"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/action_order_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_action_orders"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Orders"
                    android:textSize="@dimen/_10sdp" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/action_reward_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_action_orders"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Orders"
                    android:textSize="@dimen/_10sdp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/action_account_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_action_profile"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />
            </FrameLayout>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>