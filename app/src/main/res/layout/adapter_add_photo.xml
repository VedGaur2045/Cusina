<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@color/_FFFFFF">

        <ImageView
            android:visibility="visible"
            android:id="@+id/galleryImg"
            android:src="@mipmap/product_img"
            android:scaleType="fitXY"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp" />

        <ImageView
            android:id="@+id/imageBg"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/red_border_bold_drawable"/>

        <TextView
            android:id="@+id/selectedCount"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:background="@color/_EC0000"
            android:text="@string/_0"
            android:gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:textColor="@color/_FFFFFF"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cameraLayout"
        android:visibility="gone"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@color/_FFFFFF">

        <ImageView
            android:id="@+id/cameraImg"
            android:src="@drawable/ic_camera"
            android:scaleType="fitXY"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/newPhoto"
            android:text="@string/newPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            tools:ignore="MissingPrefix"
            android:fontFamily="@font/sourcesanspro_regular"
            android:layout_below="@+id/cameraImg"
            android:layout_centerHorizontal="true"
            android:textColor="@color/_000000"/>

    </RelativeLayout>

</RelativeLayout>