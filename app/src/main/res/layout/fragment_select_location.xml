<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <Button
        android:id="@+id/next"
        style="@style/Widget.AppCompat.Button.Borderless"
        fontPath="@fonts/sourcesanspro_semibold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/commonbuttonbg"
        android:text="@string/use_this_address"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@mipmap/close" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/next"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_25sdp"
        android:orientation="vertical">

        <TextView
            fontPath="@fonts/sourcesanspro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg1"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            tools:ignore="MissingPrefix" />

        <TextView
            fontPath="@fonts/sourcesanspro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/msg2"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            tools:ignore="MissingPrefix" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/close"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/searchaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/borderless">

            <ImageView
                android:id="@+id/search"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@mipmap/search" />

            <TextView
                fontPath="@fonts/sourcesanspro_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_12sdp"
                android:layout_toRightOf="@id/search"
                android:text="@string/search_address"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                tools:ignore="MissingPrefix" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/currentlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/borderless">

            <ImageView
                android:id="@+id/gps"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@mipmap/gps_fixed" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gps"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/locationtext"
                    fontPath="@fonts/sourcesanspro_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:text="Current Location \n1 Canley Road, Pasig City"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
