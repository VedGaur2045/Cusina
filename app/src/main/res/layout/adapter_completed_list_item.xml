<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@color/_FFFFFF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/orderNumberLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textAllCaps="false"
                android:text="@string/OrderNumber"
                tools:ignore="MissingPrefix"
                android:textStyle="bold"
                fontPath="fonts/cabin_semibold.otf"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderNumber"
                android:textAllCaps="false"
                android:text="@string/_4151"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                fontPath="fonts/cabin_semibold.otf"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/orderCompletedDate"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="@string/orderCompletedDate"
            android:layout_alignParentEnd="true"
            tools:ignore="MissingPrefix"
            fonthPath="fonts/sourcesanspro_regular.otf"
            android:textSize="@dimen/_9ssp"
            android:layout_centerVertical="true"
            android:textColor="@color/_000000"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ServerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_4sdp">

        <TextView
            android:textAllCaps="false"
            android:text="@string/Server"
            tools:ignore="MissingPrefix"
            fonthPath="fonts/sourcesanspro_regular"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ServerTxt"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="@string/_ServerTxt"
            tools:ignore="MissingPrefix"
            fontPath="fonts/cabin_semibold.otf"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/TransactionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_1sdp">

        <TextView
            android:textAllCaps="false"
            android:text="@string/TransactionTxt"
            tools:ignore="MissingPrefix"
            fonthPath="fonts/sourcesanspro_regular"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/TransactionID"
            android:textAllCaps="false"
            android:text="@string/TransactionID"
            tools:ignore="MissingPrefix"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_3sdp"
            fontPath="fonts/cabin_semibold.otf"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/TrayQntLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_1sdp">

            <TextView
                android:textAllCaps="false"
                android:text="@string/TrayQntTxt"
                tools:ignore="MissingPrefix"
                fonthPath="fonts/sourcesanspro_regular"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/TrayQuantity"
                android:textAllCaps="false"
                android:text="@string/_3"
                tools:ignore="MissingPrefix"
                fontPath="fonts/cabin_semibold.otf"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/_000000"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp" />

            <TextView
                android:id="@+id/TrayQuantityServing"
                android:textAllCaps="false"
                android:text="@string/Serving"
                tools:ignore="MissingPrefix"
                android:textStyle="bold"
                fontPath="fonts/cabin_semibold.otf"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalPriceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentEnd="true">

            <TextView
                android:textAllCaps="false"
                android:text="@string/_total"
                tools:ignore="MissingPrefix"
                fonthPath="fonts/sourcesanspro_regular"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/totalAmountPHP"
                android:textAllCaps="false"
                android:text="@string/_pHp"
                tools:ignore="MissingPrefix"
                fontPath="fonts/cabin_semibold.otf"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/_000000"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp" />

            <TextView
                android:id="@+id/totalAmount"
                android:textAllCaps="false"
                android:text="@string/_70"
                tools:ignore="MissingPrefix"
                android:textStyle="bold"
                fontPath="fonts/cabin_semibold.otf"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5ssp">

        <Button
            android:id="@+id/ORDER_DETAILS_Btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/color_solid_drawable"
            android:text="@string/order_details"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/_FFFFFF"
            tools:ignore="MissingPrefix"
            fonthPath="fonts/sourcesanspro_bold.otf"
            android:layout_marginBottom="@dimen/_3sdp"
            android:translationY="@dimen/_3sdp"
            android:translationZ="@dimen/_6sdp"/>

        <TextView
            android:id="@+id/deliveredTxt"
            android:textAllCaps="false"
            android:text="@string/CANCELLED_Txt"
            tools:ignore="MissingPrefix"
            fonthPath="fonts/sourcesanspro_bold.otf"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/_EC0000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>