<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp">

        <TextView
            android:id="@+id/reviewedUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_reviewedUserName"
            android:textColor="@color/_000000"
            android:gravity="center"
            android:textSize="@dimen/_10ssp"
            tools:ignore="MissingPrefix"
            fonthPath="fonts/sourcesanspro_regular.otf"/>

        <TextView
            android:id="@+id/reviewed_hyphen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_reviewed_hyphen"
            android:textColor="@color/_000000"
            android:layout_toEndOf="@+id/reviewedUserName"
            android:gravity="center"
            android:textSize="@dimen/_10ssp"
            tools:ignore="MissingPrefix"
            fonthPath="fonts/sourcesanspro_regular.otf"
            android:layout_toRightOf="@+id/reviewedUserName" />

        <TextView
            android:id="@+id/reviewedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_reviewedTime"
            android:textColor="@color/_000000"
            android:gravity="center"
            android:textSize="@dimen/_10ssp"
            android:layout_toEndOf="@+id/reviewed_hyphen"
            tools:ignore="MissingPrefix"
            fonthPath="fonts/sourcesanspro_regular.otf"
            android:layout_toRightOf="@+id/reviewed_hyphen" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                tools:ignore="MissingPrefix"
                fonthPath="fonts/sourcesanspro_bold.otf"
                android:id="@+id/_given_review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:src="@drawable/rating_img" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/reviewMessage"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10ssp"
        tools:ignore="MissingPrefix"
        fonthPath="fonts/sourcesanspro_regular.otf"
        android:textColor="@color/_000000"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="@string/_lorem_ipsum"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gunmetal"
        android:layout_marginTop="@dimen/_10sdp"/>

</LinearLayout>