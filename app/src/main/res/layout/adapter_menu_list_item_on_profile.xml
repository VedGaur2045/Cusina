<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shape_roundRect_bottomLeftRadius="@dimen/_11sdp"
                app:shape_roundRect_bottomRightRadius="@dimen/_11sdp"
                app:shape_roundRect_topLeftRadius="@dimen/_11sdp"
                app:shape_roundRect_topRightRadius="@dimen/_11sdp">

                <ImageView
                    android:id="@+id/productImg"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/item_name" />

            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <TextView
                android:visibility="gone"
                android:id="@+id/soldOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/soldOut"
                android:background="@drawable/white_bg_drawable"
                android:textColor="@color/_EC0000"
                android:textSize="@dimen/_10ssp"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/sourcesanspro_bold"
                tools:ignore="MissingPrefix"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_itemName"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:fontFamily="@font/sourcesanspro_bold"
                tools:ignore="MissingPrefix"/>

            <ImageView
                android:id="@+id/blubImg"
                android:src="@mipmap/blub_img"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/php"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_pHp"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_9sdp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sourcesanspro_regular"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_70"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_9sdp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/php"
                android:fontFamily="@font/sourcesanspro_regular"
                tools:ignore="MissingPrefix"
                android:layout_toEndOf="@+id/php" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_21"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_7ssp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sourcesanspro_regular"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/productLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_Likes"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_7ssp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/likeCount"
                android:fontFamily="@font/sourcesanspro_regular"
                tools:ignore="MissingPrefix"
                android:layout_toEndOf="@+id/likeCount" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_Listed"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_7ssp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sourcesanspro_regular"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/productListTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_listedTime"
                android:textColor="@color/_000000"
                android:textSize="@dimen/_7ssp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/listedTxt"
                android:fontFamily="@font/sourcesanspro_regular"
                tools:ignore="MissingPrefix"
                android:layout_toEndOf="@+id/listedTxt" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/servingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textColor="@color/_FF8500"
                android:textSize="@dimen/_7sdp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sourcesanspro_it"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/productServingLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_servingsLeft"
                android:textColor="@color/_FF8500"
                android:textSize="@dimen/_7sdp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/servingCount"
                android:fontFamily="@font/sourcesanspro_it"
                tools:ignore="MissingPrefix"
                android:layout_toEndOf="@+id/servingCount" />

        </RelativeLayout>

        <Button
            android:visibility="visible"
            android:id="@+id/refillBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="@string/_REFILL"
            android:textColor="@color/_FFFFFF"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:translationY="@dimen/_3sdp"
            android:translationZ="@dimen/_6sdp"
            android:fontFamily="@font/sourcesanspro_bold"
            tools:ignore="MissingPrefix"
            android:layout_marginBottom="@dimen/_6sdp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/color_solid_drawable" />

<!--        <Button-->
<!--            android:id="@+id/promoteBtn"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_20sdp"-->
