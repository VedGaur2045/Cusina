<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/signInUserLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/_80000000"
                    tools:ignore="MissingPrefix"
                    fonthPath="fonts/sourcesanspro_regular"
                    android:layout_toStartOf="@+id/AVL_rating"
                    android:layout_toLeftOf="@+id/AVL_rating"
                    android:text="@string/_productRating"
                    android:layout_marginEnd="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp" />

                <RatingBar
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/rewiewCount"
                    android:layout_toLeftOf="@+id/rewiewCount"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:id="@+id/AVL_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="#EFCE4A"
                    android:secondaryProgressTint="#EFCE4A"
                    android:stepSize="1.0"
                    tools:targetApi="lollipop"
                    android:layout_marginRight="@dimen/_10sdp" />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/rewiewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviewCount"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix"
                    fonthPath="fonts/sourcesanspro_regular"
                    android:textColor="@color/_000000"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/joinedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/joinedTime"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_below="@+id/rewiewCount"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix"
                    fonthPath="fonts/sourcesanspro_regular"
                    android:textColor="@color/_000000"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        fonthPath="fonts/sourcesanspro_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_65sdp"
                        android:text="@string/_owner"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_10ssp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/ownerName"
                        fonthPath="fonts/cabin_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7ssp"
                        android:text="@string/ownerKathleenDomingo"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_20ssp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        fonthPath="fonts/sourcesanspro_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:text="@string/_KitchenName"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_10ssp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/ownerKitchenName"
                        fonthPath="fonts/cabin_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7ssp"
                        android:text="@string/ownerKitchenName"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_20ssp"
                        tools:ignore="MissingPrefix" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_verified"
                            android:textColor="@color/_FF8500"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="MissingPrefix"
                            fonthPath="fonts/sourcesanspro_regular" />

                        <TextView
                            android:id="@+id/viewOrderHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="@string/_viewOrderHistory"
                            android:textColor="@color/_FF8500"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone"
                            tools:ignore="MissingPrefix"
                            fonthPath="fonts/sourcesanspro_regular" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/showMoreBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/_showMore"
                        android:textColor="@color/_FF8500"
                        android:textSize="@dimen/_10ssp"
                        tools:ignore="MissingPrefix"
                        fonthPath="fonts/sourcesanspro_regular" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ownerDetails"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/_F6F6F6" />

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mobileNumber"
                            android:textColor="@color/_000000"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="MissingPrefix"
                            fonthPath="fonts/sourcesanspro_regular" />

                        <TextView
                            android:id="@+id/ownerMobileNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7ssp"
                            android:text="@string/ownerMobileNumber"
                            android:textColor="@color/_000000"
                            android:textSize="@dimen/_14ssp"
                            tools:ignore="MissingPrefix"
                            fonthPath="fonts/sourcesanspro_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:text="@string/mobileNumber"
                            android:textColor="@color/_000000"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="MissingPrefix"
                            fonthPath="fonts/sourcesanspro_regular" />

                        <TextView
                            android:id="@+id/ownerEmailAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7ssp"
                            android:text="@string/ownerEmailId"
                            android:textColor="@color/_000000"
                            android:textSize="@dimen/_14ssp"
                            tools:ignore="MissingPrefix"
                            fonthPath="fonts/sourcesanspro_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:text="@string/KitchenLocation"
                            android:textColor="@color/_000000"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="MissingPrefix"
                            fonthPath="fonts/sourcesanspro_regular" />

                        <TextView
                            android:id="@+id/ownerAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7ssp"
                            android:text="@string/ownerAddress"
                            android:textColor="@color/_000000"
                            android:textSize="@dimen/_14ssp"
                            tools:ignore="MissingPrefix"
                            fonthPath="fonts/sourcesanspro_regular" />

                        <TextView
                            android:id="@+id/editProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/_RequestEditProfile"
                            android:textColor="@color/_FF8500"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="MissingPrefix"
                            fonthPath="fonts/sourcesanspro_regular" />

                        <RelativeLayout
                            android:id="@+id/fbButtonSecond"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_23sdp"
                            android:layout_marginRight="@dimen/_23sdp"
                            android:background="@drawable/fbbuttonbg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/connect_facebook"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                tools:ignore="MissingPrefix"
                                fonthPath="fonts/sourcesanspro_semibold" />

                            <ImageView
                                android:id="@+id/fbLogoImg"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:contentDescription="@string/todo"
                                android:src="@mipmap/facebook_logo" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <include
                    layout="@layout/custom_view_pager"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>