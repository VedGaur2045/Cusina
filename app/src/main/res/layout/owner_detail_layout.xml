                <!--                    android:scaleY="0.7"-->
                <!--                    android:numStars="5"-->
                <!--                    android:rating="0"-->
                <!--                    style="?android:attr/ratingBarStyleIndicator"-->
                <!--                    android:stepSize="0.5"/>-->

                <RatingBar
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/rewiewCount"
                    android:layout_toLeftOf="@+id/rewiewCount"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:id="@+id/AVL_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="@color/_EFCE4A"
                    android:stepSize="1.0"
                    tools:targetApi="lollipop"
                    android:layout_marginRight="@dimen/_10sdp" />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/rewiewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviewCount"
                    android:textSize="@dimen/_10ssp"
                    app:fontFamily="@font/sourcesanspro_regular"
                    android:textColor="@color/_000000"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/joinedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/joinedTime"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_below="@+id/rewiewCount"
                    android:textSize="@dimen/_10ssp"
                    app:fontFamily="@font/sourcesanspro_regular"
                    android:textColor="@color/_000000"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <LinearLayout
