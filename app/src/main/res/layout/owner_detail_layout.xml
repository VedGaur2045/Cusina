                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_65sdp"
                        android:text="@string/_owner"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                    <TextView
                        android:id="@+id/ownerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7ssp"
                        android:text="@string/ownerKathleenDomingo"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_20ssp"
                        app:fontFamily="@font/cabin_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:text="@string/_KitchenName"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                    <TextView
                        android:id="@+id/ownerKitchenName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7ssp"
                        android:text="@string/ownerKitchenName"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_20ssp"
                        app:fontFamily="@font/cabin_semibold" />

                    <TextView
                        android:id="@+id/verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/_verified"
                        android:textColor="@color/_FF8500"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/_F6F6F6" />

                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobileNumber"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                    <TextView
                        android:id="@+id/ownerMobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7ssp"
                        android:text="@string/ownerMobileNumber"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_14ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:text="@string/mobileNumber"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                    <TextView
                        android:id="@+id/ownerEmailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7ssp"
                        android:text="@string/ownerEmailId"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_14ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:text="@string/KitchenLocation"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                    <TextView
                        android:id="@+id/ownerAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7ssp"
                        android:text="@string/ownerAddress"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/_14ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                    <TextView
                        android:id="@+id/editProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/_RequestEditProfile"
                        android:textColor="@color/_FF8500"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/sourcesanspro_regular" />

                    <RelativeLayout
                        android:id="@+id/fbButtonSecond"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_23sdp"
                        android:layout_marginRight="@dimen/_23sdp"
                        android:background="@drawable/fbbuttonbg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/connect_facebook"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/sourcesanspro_semibold" />

                        <ImageView
                            android:id="@+id/fbLogoImg"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:contentDescription="@string/todo"
                            android:src="@mipmap/facebook_logo" />

                    </RelativeLayout>

                </LinearLayout>

                    <include
                        layout="@layout/view_pager_layout"/>




