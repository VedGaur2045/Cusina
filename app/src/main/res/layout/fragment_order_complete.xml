<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/_18sdp"
            android:background="@color/transparent"
            android:layout_height="@dimen/_18sdp"
            android:src="@mipmap/back"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_14sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp">

            <TextView
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/orderComplete"
                android:textColor="@color/black"
                android:textSize="@dimen/_24ssp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/cabin_semibold" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textAlignment="center"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/orderTxt_msg1"/>

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vegitables"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"/>
            <Button
                android:id="@+id/backToOrdersBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/back_to_orders"
                android:background="@drawable/commonbuttonbg"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/SeeOrderHistoryBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/SeeOrderHistory"
                android:background="@drawable/redbuttonbg"
                android:textSize="@dimen/_14ssp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_20sdp"
                tools:ignore="MissingPrefix"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textColor="@color/white"/>

        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>